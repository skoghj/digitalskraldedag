---
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import logo from "../assets/images/logo.webp";
import Button from "../components/Button.astro";
---

<div x-data="{ showmenu: false }" class="p-4 fixed lg:static w-full z-10 bg-[#182D40]">
  <div id="navbar" class="flex flex-row items-center justify-between md:px-4 md:py-2">
    <!-- Logo -->
    <div id="logo" class="flex-none">
      <a href="#"><Image src={logo} alt="logo" class="w-16" /></a>
    </div>

    <!-- Desktop Menu -->
    <nav id="desktopmenu" class="hidden lg:flex flex-1 justify-center">
      <ul class="flex flex-row gap-14 text-[#F2F4FF]">
        <li class="hover:text-[#88C8F9]"><Link href="/index">Hjem</Link></li>
        <li class="hover:text-[#88C8F9]"><Link href="/howto">Hvordan man deltager</Link></li>
        <li class="hover:text-[#88C8F9]"><Link href="/resources">Ressourcer</Link></li>
      </ul>
    </nav>

    <!-- Register Button for Desktop -->
    <div class="hidden lg:flex items-center">
      <a href="/register"><Button>Register</Button></a>
    </div>

    <!-- Hamburger Menu Button -->
    <button id="burgermenu" class="lg:hidden" x-on:click="showmenu = !showmenu">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-8 text-[#1DBF62]">
        <path fill-rule="evenodd" d="M3 6.75A.75.75 0 0 1 3.75 6h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 6.75ZM3 12a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 12Zm0 5.25a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75a.75.75 0 0 1-.75-.75Z" clip-rule="evenodd"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <nav id="mobilmenu" class="lg:hidden fixed top-18 left-0 w-full bg-[#182D40] bg-opacity-90 text-[#F2F4FF] flex flex-col pt-4" x-show="showmenu" x-transition x-on:click="showmenu = false" x-on:click.outside="showmenu = false">
    <ul class="flex flex-col items-center gap-4">
      <li class="hover:text-[#88C8F9]"><Link href="/index">Hjem</Link></li>
      <li class="hover:text-[#88C8F9]"><Link href="/howto">Hvordan man deltager</Link></li>
      <li class="hover:text-[#88C8F9]"><Link href="/ressourcer">Ressourcer</Link></li>
      <!-- Register Button in Mobile Menu -->
      <li class="mt-4">
        <a href="/register"><Button>Register</Button></a>
      </li>
    </ul>
  </nav>
</div>
